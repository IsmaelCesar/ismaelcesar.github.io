 html, body{
    height: 100%;
  }
  
  /*Configuring and defining font families*/
  @font-face {
    font-family: 'PoiretOne'; 
    src: url(<%= asset_path 'PoiretOne-Regular.woff' %>);
  } 

  @font-face { 
    font-family: 'Raleway-Regular'; 
    src: url(<%= asset_path 'Raleway/Raleway-Regular.ttf' %>)
  }

  @font-face { 
    font-family: 'Raleway-Italic'; 
    src: url(<%= asset_path 'Raleway/Raleway-Italic.ttf' %>)
  }

  @font-face{
    font-family: 'Raleway-Bold'; 
    src: url(<%= asset_path 'Raleway/Raleway-Bold.ttf'  %>)
  }

  @font-face { 
    font-family: 'button-text'; 
    src: url( <%= asset_path 'Raleway/Raleway-Thin.ttf' %>)
  }


  h1, h2, h3, h4, h5, strong {
    font-family: 'Raleway-Bold';
  }

  p, a, li{
    font-family: 'Raleway-Regular';
  }

  i, em {
     font-family: 'Raleway-Italic'
  }

  .top-nav{
    z-index: 3;
  }

  .app-name, a#class-name-link{
    font-family: 'PoiretOne';
    color: black; 
    text-decoration: none; 
    margin-left: 0.5em;
    margin-top: 0.3em;
  }

  a#class-name-link:hover::before{
    visibility: visible;
    transform: scaleX(1);
  }

  .put-shadow{
    box-shadow: 0 3px 5px black;
  }
  
  /* About-me section */
  #about-me-section{
    text-align: center;
    box-sizing: border-box;
    background-image: url('undraw_to_the_moon_v1mv.svg');
    background-repeat: no-repeat;
    height: 100vh;
    width: 100%;
    margin-top: -2em;
    margin-left: 0;
    margin-right: 0;
  }

  #about-me-content{
    background-color: rgba(255, 255, 255, 0.65);
    top:0;
    right: 0; 
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  #greetings, #about-me-description{
    font-family: 'PoiretOne';
  }
  
  #greetings{
    margin-top: 15%;
    margin-bottom: 15%;
  }

  #about-me-description{
    margin: auto;
    margin-bottom: 25%;
  }

  #about-me-section img{
    border-radius: 50%;
    width: 10%;
  }

  /* Formation */
  #formation-section .section-title{
    margin-bottom: -1em;
  }
  #formation-section .formation-time-period{
    font-size: 1.2em;
    margin-top: 2em;
  }

  #formation-section .formation-description {
    font-size: 1em;
  }

  /* Projects section general configurations */

  #projects-section .project-description {
    text-align: justify;
  }

  #projects-section .project-container{
    border: 1px solid #cfcfcf;
    background-color: white;
    padding: 1.2em;
    border-radius: 0.2em;
    -o-border-radius: 0.2em;
    -moz-border-radius: 0.2em;
    -webkit-border-radius: 0.2em;
    transition: background-color 0.5s;
  }

  #projects-section .project-container .project-title{
    background-color: #1D004F;
    color: white; 
    padding: 0.5em;
    border-radius: 0.2em;
    -o-border-radius: 0.2em;
    -moz-border-radius: 0.2em;
    -webkit-border-radius: 0.2em;
  }

  #projects-section .project-container:hover{
    background-color: #cfcfcf;
  }

  /* Publicatoins */
  #publication-set{
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    align-content: center;
  }

  a.publication-source{
    text-decoration: none;
    display: block;
  }

  .publication-container .publication-title{
    background-color: #1D004F;
    color: white;
    padding:0.5em;
    border-radius: 0.2em; 
    -o-border-radius: 0.2em; 
    -moz-border-radius: 0.2em; 
    -webkit-border-radius: 0.2em; 
    transition: background-color 0.5s, color 0.5s;
  }


  #publication-set a.publication-source{
    margin-left: 1em;
    margin-right: 1em;
    width: 20em;
  }

  /* Publicatoin Section */
  .publication-container{
    margin-top: 1em;
    margin-bottom: 1em;
  }
  /* Programming Languages  Section */

  #programming-languages-section ul{
    list-style-type: None;
    display: flex;
    justify-content: space-evenly;
    align-items: center; 
    color: white;
    line-height: 100%;
  }

  #programming-languages-section ul li{
    background-color: #1D004F;
    text-align: center;
    margin-left:2%; 
    margin-right: 2%;
    transition: background-color 0.5s;
  }

  /*  Programming Languages Section */

  #programming-languages-section ul li:hover{
    background-color: crimson;
  }

  /* Other Skill Sections  */

  #skill-list{
    width: 80%; 
    margin: auto;
  }

  #other-skills-section{
    margin-bottom: 2em;
  }

  #other-skills-section ul {
    list-style-type: none;
    display: flex;
    flex-direction: column;
  }

  #other-skills-section #skill-list>li{
    margin-top: 3em;
  }

  #other-skills-section .skill-item{
    border-bottom: 1px solid blueviolet;
  }

  #skill-list strong{
    display: block;
    border-bottom: 1px solid blueviolet;
  }

  /*===============================*/

 .footer-logo{
   width: 3em;
 }

 /*Configuring and defining nav-list and nav-list-items*/

 .top-nav{
    height: 20%;
    padding-top: 1px;
    background-color: white;
    border-bottom: 1px solid #c0c0c0;
    margin-bottom: 2em;
 }

 .sticky {
   position: fixed;
   top:0;
   right:0;
   width: 100%;
 }

 .sticky+.top-nav{
   padding-top: 100px;
 }

 .nav-list{
   list-style-type: none;
   display: flex;
 }

 .nav-list-item{
   font-family: 'button-text';
 }

 .nav-list-item a{
   text-decoration: none;
   color: #404040;
 }

 .top-menu{
  justify-content: space-around;
  align-content: flex-end;
  top: 0;
  right: 0;
 }

 .float-breaker{
   clear: both;
   margin: 0; 
 }

 /* Project Elements*/

 /* Publication Elements*/


 /* Language elements*/
 #languages-wrapper{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
 }

 .language-item{
   box-sizing: border-box;
   background-color: white;
   transition: background-color 0.3s;
 }
 
 .language-item .language-level{
   height: fit-content;
   width: fit-content;
   margin: 1em auto;
 }

 .language-item .language-level #language-native{
   margin: 2em auto;
 }

 .language-item:hover{
   background-color: #cfcfcf;
 }

 .language-item .card-title{
   background-color: #1D004F;
   font-family:'Raleway-Bold' ;
   padding: 1.2em ;
   border-radius: 10px;
   color:white;
   margin: 0;
 }

 .language-item .card-title .language-name{
   height: fit-content;
   margin: auto;
 }

 /*=================*/

 .footer-menu{
  display: flex;
  justify-content: space-evenly;
  align-content: center;
  align-items: center;
  width: 80%;
  margin:auto;
 }

 footer{ 
   background-color: black; 
   margin-bottom: 0; 
   height: 20em;
 }

 footer h1{
   font-family: 'PoiretOne';
   color: white;
   text-align: center; 
   border-bottom: 1px solid white;
   width: 80%; 
   margin:auto;
 }

  footer nav ul{
    padding-top: 0.5em;
  }

 a.icon{
   display: none;
 }

 #overlay{
  position: fixed;
  display: none; 
  top: 0; 
  right: 0; 
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 0;
  cursor: pointer;
 }

 div[class*='-container']{
    margin-top: 3em;
    margin-bottom: 3em;
  } 

 .section-title{
   margin-bottom: 2em;
 }

 /* mobile sizes*/
 /*Phone portrait*/
 @media only screen and (max-width: 500px){
  .app-name {
    font-size: 2em;
  }
  /* Configuring top menu */
    /*Icon list item decoration*/
    a.icon{
      text-decoration: none;
      font-size: 1em;
      display: inline-block;
      position: absolute;
      top: 0; 
      right: 0;
      color: black;
      padding: 1em 1em;
    }

    a.icon:active{
      color:white;
      background-color: black;
    }


    /*Defining the formatting of a nav-list item before being responsive*/
    .top-nav{
      height: 3.5em;
    }

    .top-nav li.nav-list-item{
      display: none;
    }

    /*defining styles for when the top-navigation is set to be responsive*/      
    .top-nav .nav-list.top-menu.responsive{
      margin-bottom: 30px;
    }

    .nav-list.top-menu.responsive {
      background-color: white;
      display: block;
      position: absolute;
      width: 75%;
      z-index: 1;
      top: 0;
      right:0;
    }

    .nav-list.top-menu.responsive .nav-list-item{
      display: block;
      margin-top: 1em;
      margin-bottom: 1em;
    }
    
    /* About-me section*/
    #about-me-section{
      background-size: 100%;
      background-position: center;
    }

    #about-me-section img{
      width: 25%;
      margin-top: 3em;
    }

    #greetings{
      font-size: 3em;
      margin-top: 2%;
      margin-bottom: 2%;
    }

    #about-me-description{
      margin-top: 0;
    }

    /* Programming Languages Section */
    #programming-languages-section ul li{
      padding: 5px;
      padding-bottom: 0;    
      border-radius: 5px;
      -o-border-radius: 5px;
      -moz-border-radius: 5px; 
      -webkit-border-radius: 5px; 
    }

    /* Other Skills Section */

    /*=====================*/

    /*Configuring footer element*/

    footer{
      height: 10em;
    }

    footer h1{
      font-size:1.5em;
      width: 70%;
      margin-bottom: 10px;
    }

    footer nav{
      padding-top:10%;
    }

    .nav-list .footer-menu{
      width: 80%;
      display: block;
    }

 }

